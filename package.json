    "license": "MIT",
    "dependencies": {
        "@mdx-js/mdx": "^1.5.1",
        "@mdx-js/react": "^1.5.1",
        "gatsby": "^2.13.50",
        "gatsby-background-image": "^0.8.15",
        "gatsby-image": "^2.2.29",
        "gatsby-link": "^2.2.11",
        "gatsby-mdx": "^1.0.0",
        "gatsby-plugin-google-fonts": "1.0.1",
        "gatsby-plugin-google-gtag": "^2.8.0",
        "gatsby-plugin-manifest": "^2.2.13",
        "gatsby-plugin-mdx": "^1.0.53",
        "gatsby-plugin-react-helmet": "^3.1.13",
        "gatsby-plugin-sharp": "^2.2.32",
        "gatsby-plugin-styled-components": "^3.1.4",
        "gatsby-plugin-typography": "^2.3.6",
        "gatsby-plugin-webpack-bundle-analyzer": "^1.0.5",
        "gatsby-remark-images": "^3.1.28",
        "gatsby-source-filesystem": "^2.1.33",
        "gatsby-transformer-sharp": "^2.3.0",
        "grid-styled": "^5.0.2",
        "react": "^16.9.0",
        "react-dom": "^16.9.0",
        "react-feather": "^2.0.3",
        "react-fontawesome": "^1.6.1",
        "react-helmet": "^5.2.1",
        "react-timeago": "^4.4.0",
        "react-typist": "^2.0.5",
        "react-typography": "^0.16.19",
        "react-unsplash-wrapper": "^1.1.3",
        "scroll-to-element": "^2.0.3",
        "styled-components": "^4.3.2",
        "typography": "^0.16.19",
        "typography-theme-github": "^0.16.19"
    },
    "devDependencies": {
        "cross-env": "^5.2.0",
        "eslint": "^6.3.0",
        "eslint-config-airbnb": "^18.0.1",
        "eslint-config-prettier": "^6.2.0",
        "eslint-plugin-import": "^2.18.2",
        "eslint-plugin-jsx-a11y": "^6.2.3",
        "eslint-plugin-prettier": "^3.1.0",
        "eslint-plugin-react": "^7.14.3",
        "eslint-plugin-react-hooks": "^2.0.1",
        "gatsby-cli": "^2.7.44",
        "greenkeeper-lockfile": "^1.15.1",
        "husky": "^4.3.8",
        "lint-staged": "^10.5.3",
        "prettier": "^1.18.2",
        "stylelint": "^15.10.1",
        "stylelint-config-idiomatic-order": "^7.0.3",
        "stylelint-config-prettier": "^5.2.0",
        "stylelint-config-recommended": "^3.0.0"
    },
    "scripts": {
        "build": "gatsby build",
        "develop": "cross-env GATSBY_GRAPHQL_IDE=playground gatsby develop",
        "deploy": "gatsby build --prefix-paths && gh-pages -d public",
        "format": "prettier --check src/**/*.{js,jsx}",
        "format:fix": "prettier --write src/**/*.{js,jsx}",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "start": "npm run develop",
        "serve": "gatsby serve",
        "test": "echo \"Write tests! -> https://gatsby.dev/unit-testing\"",
        "analyze": "cross-env ANALYZE_BUNDLE_SIZE=true gatsby build"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{css,scss,json,md,html}": [
            "npm run format:fix"
        ],
        "*.{js,jsx}": [
            "npm run format:fix",
            "npm run lint:fix"
        ]
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/rosstafarian/rossbrandon.dev"
    }
}
